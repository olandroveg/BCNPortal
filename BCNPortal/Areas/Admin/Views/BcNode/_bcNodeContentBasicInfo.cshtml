@model BcNodeContentViewModel
<div class="panel-body">

    <div class="row without-margin" style="margin-top: 30px">
        <div class="col-md-4">
            @if (Model.Id != null && Model.Id != string.Empty)
            {
                <input id="BcNodeContentIdInput" type="hidden" asp-for="Id" />
                <input id="BcNodeContentId" type="hidden" asp-for="ContentId" />
                <input id="BcNodeId" type="hidden" asp-for="BcNodeId" />
            }

            <div class="form-group">
                <label name="Name" asp-for="Name"></label>
                <input name="Name" class="form-control" asp-for="Name" readonly />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label name="Service" asp-for="Service"></label>
                <input name="Service" class="form-control" asp-for="Service" readonly />
                <span asp-validation-for="@Model.Service" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label name="SourceLocation" asp-for="SourceLocation"></label>
                <input name="SourceLocation" class="form-control" asp-for="SourceLocation" readonly />
                <span asp-validation-for="@Model.SourceLocation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label name="Bitrate" asp-for="Bitrate"></label>
                <input name="Bitrate" class="form-control" asp-for="Bitrate" />
            </div>
            <div class="form-group">
                <label name="Size" asp-for="Size"></label>
                <input name="Size" class="form-control" asp-for="Size" />
            </div>


        </div>



    </div>

</div>

