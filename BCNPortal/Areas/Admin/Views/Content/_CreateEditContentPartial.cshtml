
@model CreateEditContentViewModel

    <div id="main">
        <div id="content-panel" class="pageheader">
            <div class="row">
                <div class="col-md-6">
                    <h1>@ViewBag.Title</h1>
                </div>
                <div class="col-md-6">
                    @*@if (Model.locationId != null)
                    {
                        <button id="deleteLabelButton" href="#delete-location-confirm" class="btn btn-remove btn-header" data-toggle="modal" type="button">
                            <i></i> DELETE
                        </button>

                    }*@
                    @*<button id="saveContinue" type="submit" class="btn btn-success btn-header" name="save-continue" value="save-continue" style="cursor: pointer">
                            <i class="fa fa-edit"></i> SAVE & CONTINUE
                        </button>*@
                    <button id="save" type="submit" class="btn btn-success btn-header" name="save" style="cursor: pointer">
                        <i></i> SAVE
                    </button>
                </div>
            </div>
        </div>

        <section id="main-content" style="padding:0rem">


            <div class="col-md-12 padding-none">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title" style="font-weight: bold">Content</h3>
                    </div>
                    <div class="panel-body">

                        <div class="row without-margin" style="margin-top: 30px">
                            <div class="col-md-4">
                                @if (Model.Id != null && Model.Id != string.Empty)
                                {
                                    <input id="contentIdInput" type="hidden" asp-for="Id" />
                                }
                                <div class="form-group">
                                    <label name="Name" asp-for="Name"></label>
                                    <input name="Name" class="form-control" asp-for="Name" />
                                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label name="SourceLocation" asp-for="SourceLocation"></label>
                                    <input name="SourceLocation" class="form-control" asp-for="SourceLocation" />
                                    <span asp-validation-for="@Model.SourceLocation" class="text-danger"></span>
                                </div>

                                <div class="row without-margin">
                                    <div class="col-md-12">
                                        <div class="row without-margin">
                                            <label name="SelectedServiceId" asp-for="SelectedServiceId"></label>
                                        </div>
                                        <div class="row without-margin">
                                            <select name="SelectedServiceId" asp-for="SelectedServiceId" asp-items="@(new SelectList(Model.Services,"Id", "Name"))" style="width: 100%" id="contentSelect">
                                            </select>
                                        </div>
                                    </div>
                                </div>

                            </div>



                        </div>

                    </div>
                </div>
            </div>

        </section>

    </div>