
@model CreateEditLocationViewModel

    <div id="main">
        <div id="location-panel" class="pageheader">
            <div class="row">
                <div class="col-md-6">
                    <h1>@ViewBag.Title</h1>
                </div>
                <div class="col-md-6">
                    @*@if (Model.locationId != null)
                    {
                        <button id="deleteLabelButton" href="#delete-location-confirm" class="btn btn-remove btn-header" data-toggle="modal" type="button">
                            <i></i> DELETE
                        </button>

                    }*@
                    @*<button id="saveContinue" type="submit" class="btn btn-success btn-header" name="save-continue" value="save-continue" style="cursor: pointer">
                            <i class="fa fa-edit"></i> SAVE & CONTINUE
                        </button>*@
                    <button id="save" type="submit" class="btn btn-success btn-header" name="save" style="cursor: pointer">
                        <i></i> SAVE
                    </button>
                </div>
            </div>
        </div>

        <section id="main-content" style="padding:0rem">


            <div class="col-md-12 padding-none">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title" style="font-weight: bold">Location</h3>
                    </div>
                    <div class="panel-body">

                        <div class="row without-margin" style="margin-top: 30px">
                            <div class="col-md-4">
                                @if (Model.locationId != null && Model.locationId != string.Empty)
                                {
                                    <input id="locationIdInput" type="hidden" asp-for="locationId" />
                                }
                                <div class="form-group">
                                    <label name="Latitude" asp-for="Latitude"></label>
                                    <input name="Latitude" class="form-control" asp-for="Latitude" />
                                    <span asp-validation-for="@Model.Latitude" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label name="Longitude" asp-for="Longitude"></label>
                                    <input name="Longitude" class="form-control" asp-for="Longitude" />
                                    <span asp-validation-for="@Model.Longitude" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label name="Location" asp-for="Location"></label>
                                    <input name="Location" class="form-control" asp-for="Location" />
                                    <span asp-validation-for="@Model.Location" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label name="Description" asp-for="Description"></label>
                                    <input name="Description" class="form-control" asp-for="Description" />
                                    <span asp-validation-for="@Model.Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label name="Country" asp-for="Country"></label>
                                    <input name="Country" class="form-control" asp-for="Country" />
                                    <span asp-validation-for="@Model.Country" class="text-danger"></span>
                                </div>

                            </div>



                        </div>

                    </div>
                </div>
            </div>

        </section>

    </div>