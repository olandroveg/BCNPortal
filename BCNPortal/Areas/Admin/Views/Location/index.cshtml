

@{ Layout = "_Layout"; }
@section Styles
{
    <environment names="Development">
        <link rel="stylesheet" href="~/css/admin/admin.css" />
        <link rel="stylesheet" href="~/lib/dataTables-1.10.18/css/dataTables.bootstrap.css" />
        <link rel="stylesheet" href="~/lib/responsive/css/responsive.bootstrap.css" />
        <link rel="stylesheet" href="~/lib/lobibox/css/lobibox.css" />
        <link rel="stylesheet" href="~/lib/icheck/css/flat/_all.css" />
        <link rel="stylesheet" href="~/lib/select2/select2.css" />
    </environment>
    <environment names="Production">
        <link rel="stylesheet" href="~/css/admin/admin.css" />
        <link rel="stylesheet" href="~/lib/dataTables-1.10.18/css/dataTables.bootstrap.css" />
        <link rel="stylesheet" href="~/lib/responsive/css/responsive.bootstrap.css" />
        <link rel="stylesheet" href="~/lib/lobibox/css/lobibox.css" />
        <link rel="stylesheet" href="~/lib/icheck/css/flat/_all.css" />
        <link rel="stylesheet" href="~/lib/select2/select2.css" />
    </environment>
}
<body>
<section class="main-content-wrapper">

    <div id="main">
            <div class="pageheader" id="location-panel">
                <div class="row">
                    
                    <div class="col-md-6">
                        <h1>
                            <i></i> Locations
                        </h1>
                    </div>
                    <div class="col-md-6">
                        @if (User.HasRoleAdmin())
                        {
                            <button type="submit" class="btn btn-header btn-remove" style="float: right"
                                    onclick="confirmAndDeleteRedirect('deleteSelection', 'selected locations')">
                                Delete selection
                            </button>
                        
                            <form asp-action="Add" method="get">
                                <button type="submit" class="btn btn-success btn-header" style="float: right">
                                     Add
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>

            <section id="main-content">
            <div class="col-md-12 padding-none">
                <table id="location-table" class="table table-striped table-bordered nowrap" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th class="big-table-header">
                                <div class="radio">
                                    <input type="checkbox" id="all" class="icheckbox">
                                </div>
                            </th>
                        
                            <th class="big-table-header">LOCATION</th>
                            <th class="big-table-header">STATE</th>
                            <th class="big-table-header">COUNTRY</th>
                        
                        </tr>
                    </thead>
                    <tbody id="tablebody"></tbody>
                </table>
            </div>
            </section>
    </div>
    

</section>
</body>
